#bigContainer
  #container1
    left
    p Score:
    input#Score.searchBar(type='text')
    p Summary:
    textarea#Summary1.searchBar(rows = "10" cols = "50" type='text')
    p Review:
    textarea#Review.searchBar(type='text')

br
br
button#addReview(type='button') Add Review
