      <div name = "director">
        p Director:
        input(type = "text", placeholder = "Director...", id = "director", class="searchBar")
      </div>
      <div name = "ID">
        p ID:
        input(type = "text", placeholder = "ID...", id = "ID", class="searchBar")
      </div>
      Right
    #container2
      Left
      <div name = "actor">
        p Actor:
        <input type = "text" placeholder = "Actor..." id = "actor" class="searchBar">
      </div>
      <div name = "genre">
        p Genre:
        <input type = "text" placeholder = "Genre..." id = "genre" class="searchBar">
      </div>
      <div name = "user">
        p User:
