doctype html
html(lang = 'en')
  head
    meta(charset = "UTF-8")
    style(type = "text/css"): include ../layouts/HomePageStyle.css
    Title Home Page
  body

    script(src = "searchFunctionality.js", id="script",onload="init()",defer)
    input(type="submit",id="logIn", value="Login/Sign Up")
    h1 The Grand Cinema
    img(src ="./logo.png", alt="You should see the 'logo'")
    #container1
      Left
      <div name = "name">
        p Title:
        input(type = "text", placeholder = "Title...", id = "title", class="searchBar")
